<div style="padding: 20px;">

    <h2 style="margin:0 0 1em">
        {{ translate(title) }}
    </h2>

    <p style="margin:1em 0">
        {{ translate(body) | raw }}
    </p>

    {{ form().openTag(form) | raw }}

    {% for elem in form.getElements() %}
        {{ renderScript('maniple-user-consents/forms/element-checkbox.twig', { elem: elem | raw }) }}
    {% endfor %}

    <p class="text-center">
        <button type="submit" class="btn btn-primary">
            {{ translate('Save and continue') }}
        </button>
    </p>

    {{ form().closeTag() | raw }}
</div>
